<Window x:Class="_01_GUI_AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_GUI_AsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300
        ">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button x:Name="btnBlockingCode" Click="btnBlockingCode_Click" Content="Blocking Code" Padding="8" Margin="0 5" />
            <Button x:Name="btnNonBlockingCode" Click="btnNonBlockingCode_Click" Content="Non-Blocking Code" Padding="8" Margin="0 5" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Status" FontSize="11" />
            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="0 3 0 0" Padding="5">
                <TextBlock x:Name="tblockStatus" FontSize="11" />
            </Border>
        </Grid>
    </Grid>
</Window>
